#!/bin/sh

get_tag_name() {
	case $1 in
		1) echo TTY ;;
		2) echo VIM ;;
		3) echo WWW ;;
	esac
}

print() {
	dwl=$(cat ~/.cache/dwl)
	info=$(cat ~/.cache/info)
	formatted=$(echo -n "${dwl}" | tr -d ^ | wc -m)
	space="$(printf "%109s")"
	echo "${dwl} ^${space}^${info}"
}

timer() {
	while true; do
		out=$(cat ~/.cache/dwl)
		date=$(date +%R)
		bat=$(cat /sys/class/power_supply/BAT0/capacity)
		echo "  BAT ${bat} | ${date}  " > ~/.cache/info
		print
		sleep 3
	done
}

stdin() {
	while read line; do
		case $line in
			*tags*)
				tags=
				select=$(echo $line | cut -d ' ' -f 4)
				for tag in 1 2 3; do
					mask=$((1 << $((tag - 1))))
					tag=$(get_tag_name ${tag})
					if [ $(($select & $mask)) -ne 0 ]; then
						tags="${tags}^ ${tag} ^"
					else
						tags="${tags} ${tag} "
					fi
				done
				;;
			# *title*)
			# 	title=$(echo ${line} | cut -d ' ' -f 3-)
			# 	;;
			*layout*)
				layout=$(echo $line | cut -d ' ' -f 3)
				echo "${tags} ${layout}" > ~/.cache/dwl
				print
				;;
		esac
	done
}

msg() {
	timer &
	stdin
}

# swaybg -i ~/wallpapers/wallpaper.svg &
msg | ergo -f "Commit Mono 16" -N 0f0f0f -n efefef -S 7f0fef -s efefef
